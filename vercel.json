{
  "version": 2,
  "builds": [
    { "src": "client/src/main.tsx", "use": "@vercel/vite" },
    { "src": "server/api/index.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server/api/index.ts" },
    { "src": "/(.*)", "dest": "client/src/main.tsx" }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "server/api/index.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}